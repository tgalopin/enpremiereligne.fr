{% extends 'base.html.twig' %}

{% block body %}
    <div class="home">
        <div class="home-header pt-4 pl-4 pr-4 pb-3 pt-lg-5 pl-lg-5 pr-lg-5 pb-lg-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-11 col-lg-10 col-xl-9">
                        <h1 class="sr-only">
                            {% trans %}site.name{% endtrans %}
                        </h1>

                        <img src="{{ asset('res/logo.svg') }}" class="home-header-logo" alt="En première ligne" />

                        <h4 class="font-weight-normal home-header-pitch mt-4">
                            {% trans %}home.byline{% endtrans %}
                        </h4>

                        <div class="home-header-share mt-5">
                            <div class="row justify-content-center align-items-center">
                                <div class="col-lg-auto text-center mb-2">
                                    {% trans %}social.share-intro{% endtrans %}
                                </div>
                                <div class="col-lg-auto text-center mb-2">
                                    <a href="https://www.facebook.com/sharer/sharer.php?u={{ url('homepage')|url_encode }}" title="{% trans %}social.share-facebook{% endtrans %}" target="_blank" rel="noreferrer noopener">
                                        {{ include('_icons/facebook.html.twig') }}
                                    </a>
                                    <a href="https://twitter.com/intent/tweet?text={{ url('homepage') }}" title="{% trans %}social.share-twitter{% endtrans %}" target="_blank" rel="noreferrer noopener">
                                        {{ include('_icons/twitter.html.twig') }}
                                    </a>
                                    <a href="https://telegram.me/share/url?url={{ url('homepage') }}" title="{% trans %}social.share-facebook{% endtrans %}" target="_blank" rel="noreferrer noopener">
                                        {{ include('_icons/telegram.html.twig') }}
                                    </a>
                                    <a href="https://wa.me/?text={{ url('homepage') }}" title="{% trans %}social.share-facebook{% endtrans %}" target="_blank" rel="noreferrer noopener">
                                        {{ include('_icons/whatsapp.html.twig') }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="home-row">
            <div class="home-row-half text-white">
                <div class="bg-primary">
                    <div class="m-4 p-3 m-lg-5 p-lg-4">
                        <a href="{{ path('process_request') }}" class="home-row-half-button text-white">
                            <div class="home-row-half-button-icon d-none d-lg-block">
                                {{ include('_icons/arrow.html.twig') }}
                            </div>
                            <div class="home-row-half-button-label">
                                {% trans %}home.work-title{% endtrans %}
                            </div>
                        </a>

                        <div class="home-row-half-details mt-3 mb-4">
                            <p>
                                {% trans %}home.work-intro{% endtrans %}
                            </p>
                            {% trans %}home.work-request{% endtrans %}
                        </div>

                        <div class="row no-gutters text-center">
                            <div class="col-12 col-xl-auto">
                                <a href="{{ path('process_request') }}"
                                   class="btn btn-primary btn-lg border-white border mr-xl-3">
                                    {% trans %}label.request-help{% endtrans %}
                                </a>
                            </div>
                            <div class="col-12 col-xl-auto">
                                <a href="{{ path('content_how') }}"
                                   class="btn btn-link btn-lg text-white mt-3 mt-xl-0">
                                    {% trans %}label.how-work{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="home-isolated">
                    <div class="m-4 p-3 m-lg-5 p-lg-4">
                        <a href="{{ path('process_request_vulnerable') }}" class="home-row-half-button text-white">
                            <div class="home-row-half-button-icon d-none d-lg-block">
                                {{ include('_icons/arrow.html.twig') }}
                            </div>
                            <div class="home-row-half-button-label">
                                {% trans %}home.risk-title{% endtrans %}
                            </div>
                        </a>

                        <div class="home-row-half-details mt-3 mb-4">
                            <p>
                                {% trans %}home.risk-intro{% endtrans %}
                            </p>
                            {% trans %}home.risk-request{% endtrans %}
                        </div>

                        <div class="row no-gutters text-center">
                            <div class="col-12 col-xl-auto">
                                <a href="{{ path('process_request_vulnerable') }}"
                                   class="btn btn-teal btn-lg border-white border mr-xl-3">
                                    {% trans %}label.request-help{% endtrans %}
                                </a>
                            </div>
                            <div class="col-12 col-xl-auto">
                                <a href="{{ path('content_how') }}"
                                   class="btn btn-link btn-lg text-white mt-3 mt-xl-0">
                                    {% trans %}label.how-work{% endtrans %}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="home-row-half justify-content-start bg-info text-white">
                <div class="m-4 p-3 m-lg-5 p-lg-4">
                    <a href="{{ path('process_helper') }}" class="home-row-half-button text-white">
                        <div class="home-row-half-button-icon d-none d-lg-block">
                            {{ include('_icons/arrow.html.twig') }}
                        </div>
                        <div class="home-row-half-button-label">
                            {% trans %}home.title{% endtrans %}
                        </div>
                    </a>

                    <div class="home-row-half-details mt-3 mb-4">
                        <p>
                            {% trans %}home.young-healthy{% endtrans %}
                        </p>
                        {% trans %}home.intro{% endtrans %}
                    </div>

                    <div class="row no-gutters text-center">
                        <div class="col-12 col-xl-auto">
                            <a href="{{ path('process_helper') }}"
                               class="btn btn-info btn-lg border-white border mr-xl-3">
                                {% trans %}label.offer-help{% endtrans %}
                            </a>
                        </div>
                        <div class="col-12 col-xl-auto">
                            <a href="{{ path('content_how') }}"
                               class="btn btn-link btn-lg text-white mt-3 mt-xl-0">
                                {% trans %}label.how-work{% endtrans %}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="home-ecosystem p-4 p-lg-5">
            <div class="home-ecosystem-feedbacks mb-5">
                <h5 class="font-weight-normal mb-5 p-4">
                    {% trans with {'count' : countTotalHelpers|number_format(0, ',', ' ') } %}home.number-volunteers{% endtrans %}
                    <br />
                    {% trans with {'percentage' : (((countTotalOwners - countUnmatchedOwners) / countTotalOwners) * 100)|number_format(2) } %}home.percentage-resolved{% endtrans %}
                </h5>

                <h5>
                    {% trans %}label.testimonials{% endtrans %}
                </h5>

                <div class="row">
                    <div class="col-12 col-lg-6">
                        <div class="p-3 p-lg-5">
                            <blockquote>
                                <div>
                                    <p>
                                        {% trans %}home.testimonial-one{% endtrans %}
                                    </p>

                                    <cite>{% trans %}home.testimonial-one-from{% endtrans %}</cite>
                                </div>
                            </blockquote>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="p-3 p-lg-5">
                            <blockquote>
                                <div>
                                    <p>
                                        {% trans %}home.testimonial-two{% endtrans %}
                                    </p>

                                    <cite>{% trans %}home.testimonial-two-from{% endtrans %}</cite>
                                </div>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>

            {# There seems no value in translating these since they are France specific - maybe an environment variable to indicate the site? #}
            <div class="row">
                <div class="col-lg-6">
                    <div class="home-ecosystem-assos mb-5 pb-5">
                        <div class="home-ecosystem-assos-title">
                            Nous soutenons
                        </div>

                        <a href="https://www.restosducoeur.org/devenir-benevole/" target="_blank"
                           title="Contactez votre antenne locale des Restos du Coeur">
                            <img src="{{ asset('res/assos/restosducoeur.png') }}" />
                        </a>

                        <a href="https://dondesang.efs.sante.fr/information-concernant-linfection-covid-19-coronavirus-sars-cov2-actualisation-19032020" target="_blank"
                           title="Prévoyez d’aller donner votre sang">
                            <img src="{{ asset('res/assos/efs.png') }}" />
                        </a>

                        <a href="https://covid19.reserve-civique.gouv.fr/" target="_blank"
                           title="Participez aux missions d'urgence et de proximité avec la Réserve civique">
                            <img src="{{ asset('res/assos/rc.png') }}" style="max-width: 140px;" />
                        </a>

                        <a href="https://solidarite-fde.fr/" target="_blank"
                           title="Plateforme de mise en relation pour les français bloqués à l'étranger">
                            <img src="{{ asset('res/assos/solidarite-fde.png') }}" style="max-width: 140px;" />
                        </a>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="home-ecosystem-assos mb-5 pb-5">
                        <div class="home-ecosystem-assos-title">
                            Soutenu par
                        </div>

                        <a href="https://www.le-frenchimpact.fr/nos-actualites/entraide/entraide-sanitaire" target="_blank"
                           title="En Première Ligne est labellisée Entraide sanitaire French Impact">
                            <img src="{{ asset('res/assos/frenchimpact.png') }}" style="max-height: 60px;" />
                        </a>

                        <a href="https://solidaires-handicaps.fr/action/courses-sans-contact" target="_blank"
                           title="En Première Ligne est une action de solidarité">
                            <img src="{{ asset('res/assos/solidarite-handicap.png') }}" style="max-height: 60px;" />
                        </a>
                    </div>
                </div>
            </div>

            <div class="home-ecosystem-medias">
                <div class="home-ecosystem-assos-title">
                    Ils parlent de vous !
                </div>

                <a href="https://www.20minutes.fr/sante/2742831-20200318-coronavirus-logements-courses-gardes-solidarite-envers-soignants-organise" target="_blank">
                    <img src="{{ asset('res/medias/20minutes.png') }}" />
                </a>

                <a href="https://twitter.com/brutofficiel/status/1240281822401105920" target="_blank">
                    <img src="{{ asset('res/medias/brut.png') }}" />
                </a>

                <a href="https://www.europe1.fr/societe/coronavirus-4-sites-internet-pour-faciliter-la-solidarite-entre-voisins-3955966" target="_blank">
                    <img src="{{ asset('res/medias/europe1.png') }}" />
                </a>

                <a href="https://www.lefigaro.fr/flash-actu/courses-garde-d-enfants-face-au-coronavirus-les-initiatives-solidaires-se-multiplient-sur-internet-20200315" target="_blank">
                    <img src="{{ asset('res/medias/figaro.png') }}" />
                </a>

                <a href="https://www.francebleu.fr/infos/societe/coronavirus-des-initiatives-pour-aider-les-soignants-1584455310" target="_blank">
                    <img src="{{ asset('res/medias/francebleu.png') }}" />
                </a>

                <a href="https://www.lci.fr/population/coronavirus-trois-solutions-pour-aider-le-personnel-de-sante-mobilise-2148129.html" target="_blank">
                    <img src="{{ asset('res/medias/lci.png') }}" />
                </a>

                <a href="https://www.lemonde.fr/planete/article/2020/03/19/coronavirus-comment-pouvez-vous-aider-tout-en-etant-confine_6033695_3244.html" target="_blank">
                    <img src="{{ asset('res/medias/lemonde.png') }}" />
                </a>

                <a href="https://twitter.com/en1ereligne/status/1243523242079502337" target="_blank">
                    <img src="{{ asset('res/medias/magdelasante.png') }}" />
                </a>

                <a href="https://www.ouest-france.fr/leditiondusoir/data/82936/reader/reader.html#!preferred/1/package/82936/pub/117254/page/5" target="_blank">
                    <img src="{{ asset('res/medias/ouest-france.png') }}" />
                </a>

                <a href="https://www.rtl.fr/actu/debats-societe/confinement-quand-des-chaines-de-solidarites-se-mettent-en-place-7800306019" target="_blank">
                    <img src="{{ asset('res/medias/rtl.png') }}" />
                </a>
            </div>
        </div>

        {{ include('_include/footer.html.twig') }}
    </div>
{% endblock %}
